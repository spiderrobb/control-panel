{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "compile",
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$csc", "$jshint", "$eslint-stylish"]
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "test",
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "package",
      "type": "npm",
      "script": "package",
      "problemMatcher": []
    },
    {
      "label": "npm: install",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": []
    },
    {
      "label": "install-extension",
      "type": "shell",
      "command": "code --install-extension controlpanel-0.0.1.vsix",
      "problemMatcher": [],
      "dependsOn": ["package"]
    },
    {
      "label": "reinstall-extension",
      "type": "shell",
      "command": "code --uninstall-extension your-publisher-name.controlpanel && code --install-extension controlpanel-0.0.1.vsix",
      "problemMatcher": [],
      "dependsOn": ["package"]
    }
  ]
}
