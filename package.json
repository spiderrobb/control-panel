{
  "name": "controlpanel",
  "displayName": "ControlPanel",
  "description": "MDX-powered task management and documentation panel",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:controlpanel.mdxView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "controlpanel-sidebar",
          "title": "Control Panel",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "controlpanel-sidebar": [
        {
          "id": "controlpanel.mdxView",
          "name": "Documentation",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "controlpanel.openMdx",
        "title": "Control Panel: Open Documentation",
        "icon": "$(book)"
      },
      {
        "command": "controlpanel.refreshView",
        "title": "Control Panel: Refresh View",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.5.3",
    "mocha": "^10.2.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/vsce": "^2.22.0"
  }
}
