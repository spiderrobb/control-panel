{
  "name": "controlpanel",
  "displayName": "ControlPanel",
  "description": "MDX-powered task management and documentation panel",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/placeholder/controlpanel"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:controlpanel.mdxView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "controlpanel-sidebar",
          "title": "Control Panel",
          "icon": "$(github-action)"
        }
      ]
    },
    "views": {
      "controlpanel-sidebar": [
        {
          "id": "controlpanel.mdxView",
          "name": "Documentation",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "controlpanel.openMdx",
        "title": "Control Panel: Open Documentation",
        "icon": "$(book)"
      },
      {
        "command": "controlpanel.refreshView",
        "title": "Control Panel: Refresh View",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "multi-source:test": "echo 'Running multi-source tests from package.json...' && sleep 3",
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint": "eslint . --ext .js,.jsx || true",
    "test": "npm run test:all",
    "test:extension": "npx mocha test/pure-functions.test.js test/logger.test.js test/process-lifecycle.test.js test/failure-scenarios.test.js test/concurrency.test.js test/resource-management.test.js test/integration-stress.test.js test/extension.test.js --ui tdd --timeout 30000",
    "test:webview": "jest",
    "test:all": "npm-run-all --parallel test:extension test:webview",
    "coverage": "npm run coverage:all",
    "coverage:extension": "nyc --reporter=json --reporter=text --report-dir=coverage/extension npx mocha test/pure-functions.test.js test/logger.test.js test/process-lifecycle.test.js test/failure-scenarios.test.js test/concurrency.test.js test/resource-management.test.js test/integration-stress.test.js test/extension.test.js --ui tdd --timeout 30000",
    "coverage:webview": "jest --coverage --coverageDirectory=coverage/webview",
    "coverage:all": "npm run coverage:extension && npm run coverage:webview && nyc merge coverage/extension coverage/webview --temp-dir coverage/.nyc_output && nyc report --temp-dir coverage/.nyc_output --reporter=html --reporter=text --report-dir=coverage --check-coverage --lines 80",
    "package": "vsce package --allow-missing-repository --allow-star-activation --no-yarn"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mdx-js/mdx": "^3.1.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.22.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
